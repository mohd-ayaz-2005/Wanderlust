<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="post" action="/listings" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Farm House"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a valid title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="Enter Description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a valid description</div>
      </div>

      <!-- <div class="mb-3">
        <label for="photos" class="form-label">Photos (up to 5)</label>
        <input
          id="photos"
          name="photos"
          type="file"
          accept="image/*"
          class="form-control"
          multiple
        />
        <div class="form-text">Choose up to 5 photos from your gallery.</div>
      </div> -->
      <div class="mb-3">
        <label class="form-label">Image URL</label>
        <input
          name="listing[image][url]"
          type="text"
          class="form-control"
          placeholder="https://images.unsplash.com/..."
          required
        />
      </div>

      <div class="row">
        <!-- price field -->
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="2400"
            type="number"
            step="any"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid country name</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="Srinagar, Jammmu & Kashmir"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a valid location</div>
      </div>

      <button class="btn btn-dark add-btn mt-3">Add</button>
      <br /><br />
    </form>
  </div>
</div>
