<% layout("/layouts/boilerplate") %>

<div class="row mt-4 justify-content-center">
  <div class="col-md-6 col-lg-5">
    <h1 class="auth-heading text-center">Login to Wanderlust</h1>
    <p class="text-muted text-center mb-4">
      Welcome back! Sign in to manage your stays and reviews.
    </p>
    <form action="/login" method="POST" class="needs-validation card p-4 auth-card" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>

      <button type="submit" class="btn btn-dark w-100 mb-2">Login</button>
      <p class="text-muted small mb-0 text-center">
        New here?
        <a href="/signup">Create an account</a>
      </p>
    </form>
  </div>
</div>
